CONFIGURE_FILES = Makefile config.status config.cache config.h config.log autom4te.cache
CC = gcc
CXX = g++
DEFS = -DPACKAGE_NAME=\"heapstat\" -DPACKAGE_TARNAME=\"heapstat\" -DPACKAGE_VERSION=\"0.1.0\" -DPACKAGE_STRING=\"heapstat\ 0.1.0\" -DPACKAGE_BUGREPORT=\"admin2@whiteboard.ne.jp\" -DPACKAGE_URL=\"\"
CFLAGS = -g -I. -I../inc $(DEFS) -W -Wall -Wno-unknown-pragmas -Iinc 
LD_FLAGS = 
LN = /usr/bin/ln
PRODUCTS = leak32 leak64 plibtest astest small gtest-all
INSTALL = /usr/bin/ginstall -c
TEMPFILES = *~ .*~ .\#* \#*\# *.o
GTEST_DIR = ./gtest

all: unittest

leak32: leak.c
	${CC} $(CFLAGS) -m32 -g -o $@ leak.c

leak64: leak.c
	${CC} $(CFLAGS) -m64 -g -o $@ leak.c

plibtest: plibtest.c
	${CC} $(CFLAGS) -m64 -lproc -o $@ plibtest.c

astest: astest.c
	${CC} $(CFLAGS) -m64 -o $@ astest.c

small: small.c
	${CC} $(CFLAGS) -m64 -o $@ small.c

clean:
	-rm -f $(PRODUCTS) $(TEMPFILES) 
	-cd gtest ; make clean

distclean: 
	-rm -fr $(CONFIGURE_FILES) $(TEMPFILES) 
	-cd gtest ; make distclean

gtest-all: 
	cd gtest ; make

heapstat_unittest: heapstat_unittest.cpp
	$(CXX) -isystem $(GTEST_DIR)/include -pthread heapstat_unittest.cpp \
	$(GTEST_DIR)/src/gtest_main.cc $(GTEST_DIR)/libgtest.a  -o heapstat_unittest

unittest: gtest-all heapstat_unittest
	heapstat_unittest
